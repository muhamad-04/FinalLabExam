<!DOCTYPE html>
<html>
<head>
  <title>Records</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Records</h1>
    <a href="/add" class="btn btn-primary">Add New</a>
    <table class="table">
      <thead>
        <tr>
          <th>Reg#</th>
          <th>Collection Name</th>
          <th>Fields</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach(record => { %>
          <tr>
            <td><%= record.regNumber %></td>
            <td><%= record.collectionName %></td>
            <td><%= record.fields %></td>
            <td>
              <a href="/edit/<%= record._id %>" class="btn btn-warning">Update</a>
              <form action="/delete/<%= record._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>